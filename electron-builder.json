{
  "appId": "com.example.my-electron-app",
  "productName": "My Electron App",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "entitlements": "entitlements.plist"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  },
  "publish": {
    "provider": "github",
    "owner": "quochoatqh",
    "repo": "try-to-publish",
    "releaseType": "release"
  }
}
